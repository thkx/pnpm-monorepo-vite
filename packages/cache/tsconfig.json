{
  "include": [
    "./src/"
  ],
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "lib": [
      "es2018"
    ],
    "declaration": true,
    "outDir": "./build/",
    "rootDir": "./src/",
    "baseUrl": "../../",
    "paths": {
      "tslib": ["node_modules/tslib/tslib.d.ts"]
    },
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true
  }
}